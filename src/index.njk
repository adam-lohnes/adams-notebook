---
layout: base.njk
---

<div class="container">
    <section class="hero">
        <h1>Welcome to Adam's Notebook</h1>
        <p>A collection of thoughts, ideas, and explorations in technology and programming.</p>
    </section>
    
    <section class="recent-posts">
        <h2>Recent Posts</h2>
        
        <div class="posts-grid">
            {% set recentPosts = collections.posts | reverse %}
            {% for post in recentPosts | slice(0, 3) %}
                <article class="post-card">
                    <div class="post-date">{{ post.date | formatDate }}</div>
                    <h3><a href="{{ post.url }}">{{ post.data.title }}</a></h3>
                    {% if post.data.description %}
                        <p class="post-description">{{ post.data.description }}</p>
                    {% endif %}
                    <div class="post-tags">
                        {% for tag in post.data.tags %}
                            {% if tag != "posts" %}
                                <span class="tag">{{ tag }}</span>
                            {% endif %}
                        {% endfor %}
                    </div>
                </article>
            {% endfor %}
        </div>
        
        <div class="view-all">
            <a href="/posts/" class="btn">View All Posts</a>
        </div>
    </section>
</div> 